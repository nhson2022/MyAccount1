<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row">
		<div class="col text-start">
			<h1>Articles</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New article", new_admin_article_path, class: 'btn btn-primary my-2' %>
		</div>
	</div>
</div>
<div id="articles">
	<% @articles.each do |article| %>
		<%= render article %>
		<p>
			<%= link_to "Show this article", admin_article_path(article), class: 'btn btn-info' %>
		</p>
	<% end %>
</div>
