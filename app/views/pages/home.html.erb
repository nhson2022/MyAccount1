<h1>Pages#home</h1>
<% @articles.each do |article| %>
	<div class="card">
		<div class="card-body">
			<h5 class="card-title"><%= article.title %></h5>
			<div>
				<%= article.content %>
			</div>
		</div>
        <div class="card-footer">
        <%= link_to "Show", list_articles_path, class: 'btn btn-info' %>
        </div>
	</div>

<% end %>
